# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/ssfi_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://ssfi.in

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp
ALLOWED_DOC_TYPES=application/pdf,image/jpeg,image/png

# Image Processing
WEBP_QUALITY=80
IMAGE_MAX_WIDTH=1920
THUMBNAIL_SIZE=300
SIGNATURE_SIZE=400

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@ssfi.in

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Encryption
ENCRYPTION_KEY=32-character-encryption-key-here-change-this
ENCRYPTION_ALGORITHM=aes-256-cbc

# Age Calculation Cut-off Date
SEASON_CUTOFF_DATE=2025-01-01

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Certificate Configuration
CERTIFICATE_TEMPLATE_PATH=./templates/certificate.pdf
CERTIFICATE_OUTPUT_PATH=./uploads/certificates

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_APP_URL=http://localhost:3000
